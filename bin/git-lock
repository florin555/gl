#!/usr/bin/env ruby

if ARGV.size < 1
  abort "Usage: git-lock command arguments"
end

puts File.expand_path('.')

current_path = File.dirname(__FILE__)
command = ARGV[0]
arguments = ARGV[1..-1].join(' ')

puts %x[ #{current_path}/#{command} #{arguments} ]

puts "-------------"
require 'gitlock/mouse'

m = Mouse.new
m.say "hello, world!"
